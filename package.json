{
  "name": "firefox-owncast-extension",
  "version": "0.1.0",
  "author": "Fabian Siegel <fabians1999@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack && web-ext build",
    "watch": "webpack --watch",
    "lint": "eslint src/ && web-ext lint",
    "start": "web-ext run"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^7.17.0",
    "eslint-plugin-mozilla": "^2.9.2",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.5.1",
    "mini-css-extract-plugin": "^1.3.3",
    "sass": "^1.32.2",
    "web-ext": "^5.4.1",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.1.4",
    "css-loader": "^5.0.1",
    "eslint-plugin-vue": "^7.4.1",
    "jquery": "^3.5.1",
    "postcss-loader": "^4.1.0",
    "sass-loader": "^10.1.1",
    "scss-loader": "^0.0.1",
    "tailwindcss": "^2.0.2",
    "urlcat": "^2.0.4",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "vuex": "^3.6.0"
  },
  "webExt": {
    "sourceDir": "addon",
    "build": {
      "overwriteDest": true
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "plugins": [
      "mozilla"
    ],
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "eqeqeq": 2,
      "quotes": [
        "error",
        "single"
      ],
      "camelcase": 2,
      "curly": 2,
      "space-in-parens": [
        "error",
        "never"
      ]
    }
  }
}
