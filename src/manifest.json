{
  "manifest_version": 2,
  "name": "Firefox OwnCast Extension",
  "version": "0.1.0",
  "description": "",
  "background": {
    "scripts": [
      "/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/js/add-follow-button.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Firefox OwnCast Extension"
  },
  "permissions": [
    "*://*/*",
    "storage",
    "notifications"
  ]
}
